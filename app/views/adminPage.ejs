<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">Mon site</a>
      <div class="links">
        <a href="/api/user">Profile</a>
        <form action="/api/user/logout" method="post">
          <button type="submit" id="logoutForm">Se d√©connecter</button>
        </form>
      </div>
    </nav>
    <h1>Admin Dashboard - Search User</h1>

    <h3>Search User</h3>
    <form action="/api/user/admin" method="GET">
      <label for="searchQuery">Search by Username or Email:</label>
      <input
        type="text"
        id="username"
        name="username"
        placeholder="Enter username or email..."
        required
      />
      <button type="submit">Search</button>
    </form>

    <% if (users.length > 0) { %>
    <h3>Search Results</h3>
    <table>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Admin</th>
      </tr>

      <% users.forEach(function(user) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.isAdmin %></td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </body>
</html>